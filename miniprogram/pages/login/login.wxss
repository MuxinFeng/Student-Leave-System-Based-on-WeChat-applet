page{
  height:100%;
}
.wrap{
  display:flex;
  flex-direction: column;
  width:100%;
  height:100%;
}
.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
.title{
  display:flex;
  flex-direction: column;
  width:100%;
  align-items: center;
  height:40%;
  line-height:60rpx;
}
.login{
  width:90%;
  padding-left: 40rpx;
}
.username{
  border-top: 1rpx solid gainsboro;
  border-bottom: 1rpx solid gainsboro;
  display:flex;
  flex-direction: row;
  align-items:center;
  width:100%;
  height:100rpx;
  font-size: 30rpx;
}
.pwd{
  border-bottom: 1rpx solid gainsboro;
  display:flex;
  flex-direction: row;
  align-items:center;
  width:100%;
  height:100rpx;
  font-size: 30rpx;
}
form input{
  margin-left:20rpx;
  flex:6;
}
form label{
  flex:1;
}
.confirm{
  margin-top: 250rpx;
  width:70%;
  height:100rpx; 
  line-height:100rpx;
  background-color: rgba(0, 132, 255, 0.863);
  color: rgb(247, 238, 238);
} 
.registered{
  margin-top: 10rpx;
  margin-left:30rpx;
  font-size: 30rpx;
  color: blue;
}
